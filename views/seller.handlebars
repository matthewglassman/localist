<h2>Whatcha Sellin'?</h2>

<h3>Create a new listing!</h3>
  <form class="create-update-form" action="/" method="POST">
    <div class="form-group">
      <label for="ls-title">Title</label>
      <input type="text" id="ls-title" name="post_title">

      <label for="ls-body">Body</label>
      <input type="text" id="ls-body" name="post_body">

      <label for="ls-price">Price</label>
      <input type="number" id="ls-price" name="post_price">

    </div>

    <button type="submit">Submit new listing!</button>
  </form>

