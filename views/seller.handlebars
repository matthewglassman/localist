<h2>Whatcha Sellin'?</h2>

<h3>Create a new listing!</h3>
  <form class="create-update-form" action="/" method="POST">
    <div class="form-group">
      <label for="ls-title">Title</label>
      <input type="text" id="ls-title" name="post_title"><br>

      <label for="ls-body">Body</label>
      <input type="text" id="ls-body" name="post_body"><br>

      <select>
        <option value="1">For Sale</option>
        <option value="2">Housing</option>
        <option value="3">Personals</option>
      </select><br>

      <label for="ls-price">Price</label>
      <input type="number" id="ls-price" name="post_price"><br>

    </div>

    <button type="submit">Submit new listing!</button>
  </form>

